function sec_catalog_preprocess_page(&$vars)
{
  if (arg(0) == 'katalog') {
    // вывод Заголовка в виде баннера
    $vars['is_title_as_banner'] = true;
    $img_url = 'public://images/page-banners/katalog.jpg';

    // Заголовок
    $title = 'Каталог продукции';
    if (arg(1)) {
      if ($category_id = sec_catalog_get_category_id_by_name(arg(1))) {
        if ($cat_info = sec_catalog_get_category_info($category_id)) {
          $title = $cat_info['title'];
          if ($cat_info['icon_num']) {
            $vars['title_prefix'] = ['#markup' => '<div class="page-title-logo"><i class="icon icon-' . $cat_info['icon_num'] . '"></i></div>'];
          }
          if ($cat_info['banner']['uri']) {
            $img_url = $cat_info['banner']['uri'];
          }
        }
      }
    }
    $vars['title'] = $title;

    $img_url = $vars['is_mobile'] ? image_style_url('banner_mobile', $img_url) : file_create_url($img_url);
    $vars['title_background'] = $img_url;
  }
}

