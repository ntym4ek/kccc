function sec_catalog_get_content_filtered($filters)
{
  $content = '';

  if ($catalog = sec_catalog_get_products_filtered($filters)) {
    foreach ($catalog as $category) {
      foreach ($category['products'] as $product_info) {
        $content .= '<div class="view-row col-xs-12 col-md-6">';
        $content .=   theme('card_product_h', $product_info);
        $content .= '</div>';
      }
    }
  } else {
    $content .= '<div class="view-empty">';
    $content .=  'Препаратов не найдено, попробуйте изменить фильтры.';
    $content .= '</div>';
  }

  return $content;
}

function sec_catalog_filters_form($form, &$form_state)
{
  $form['filters'] = [
    '#type' => 'container',
    '#attributes' => ['class' => ['row']],
  ];

  // Формируем Фильтры только один раз в форме, так как здесь часть из них может быть сброшена.
  // Далее нужно пользоваться сохранёнными в $from или $form_state
  $filters = sec_catalog_get_filters_set();
  // если за изменённым фильтром есть другие, то их нужно сбросить
  if (isset($form_state['filters'])) {
    if ((!empty($_GET['category']) && $form_state['filters']['categories']['current_id'] != $_GET['category'])
          || (!empty($_POST['category']) && $form_state['filters']['categories']['current_id'] != $_POST['category'])
    )
    {
      $filters['components']['current_id'] = null;
      $filters['cultures']['current_id'] = null;
    }
    if ((!empty($_GET['component']) && $form_state['filters']['components']['current_id'] != $_GET['component'])
          || (!empty($_POST['component']) && $form_state['filters']['components']['current_id'] != $_POST['component'])
    )
    {
      $filters['cultures']['current_id'] = null;
    }
  }
  // запоминаем фильтры
  $form_state['filters'] = $filters;
  // через форму будем передавать фильтры в функцию формирования контента
  $form['#data']['filters'] = $filters;
  // сбрасываем установленные значения фильтров формы, установим ниже с учётом сброшенных
  unset($form_state["input"]);

  $cat_options = [0 => 'Все'];
  foreach ($filters['categories']['options'] as $id => $label) {
    $cat_options[$id] = $label;
  }
  $form['filters']['category'] = [
    '#type' => 'select',
    '#title' => 'Категория',
    '#options' => $cat_options,
    '#default_value' => $filters['categories']['current_id'],
    '#prefix' => '<div class="col-xs-12 col-md-6 col-lg-3">',
    '#suffix' => '</div>',
    '#ajax' => [
      'wrapper' => '',
      'callback' => 'sec_catalog_filters_form_ajax',
    ],
  ];

  $cmp_options = [0 => 'Все'];
  foreach ($filters['components']['options'] as $id => $label) {
    $cmp_options[$id] = $label;
  }
  $form['filters']['component'] = [
    '#type' => 'select',
    '#title' => 'Действующее вещество',
    '#options' => $cmp_options,
    '#default_value' => $filters['components']['current_id'],
    '#prefix' => '<div class="col-xs-12 col-md-6 col-lg-3">',
    '#suffix' => '</div>',
    '#ajax' => [
      'wrapper' => '',
      'callback' => 'sec_catalog_filters_form_ajax',
    ],
  ];

  $cultures_options = [0 => 'Все'];
  foreach ($filters['cultures']['options'] as $id => $label) {
    $cultures_options[$id] = $label;
  }
  $form['filters']['culture'] = [
    '#type' => 'select',
    '#title' => 'Культура',
    '#options' => $cultures_options,
    '#default_value' => $filters['cultures']['current_id'],
    '#prefix' => '<div class="col-xs-12 col-md-6 col-lg-3">',
    '#suffix' => '</div>',
    '#ajax' => [
      'wrapper' => '',
      'callback' => 'sec_catalog_filters_form_ajax',
    ],
  ];

  return $form;
}

function sec_catalog_filters_form_ajax($form, $form_state)
{
  // Фильтры берём из формы, так как они могут быть в ней изменены
  $filters = $form['#data']['filters'];
  $content = sec_catalog_get_content_filtered($filters);

  $view = [
    'id' => 'catalog',
    'classes' => 'view view-catalog',
    'exposed' => drupal_render($form),
    'content' => $content,
  ];
  $commands[] = ajax_command_replace('#catalog', theme('custom_view', ['view' => $view]));


  // отправить новую форму
//  $commands[] = ajax_command_html('#catalog', sec_catalog_page());

  $title = 'Каталог препаратов';
  $title_logo = '';
  $img_url = 'public://images/page-banners/katalog.jpg';

  // определить новый URL, которому соответствует содержимое страницы
  // URL будет установлен в адресную строку браузера через history.pushState
  $url = '/' . $filters['query']['q'];
  $parameters = drupal_get_query_parameters($filters['query']);
  if ($parameters) $url .= '?' . drupal_http_build_query($parameters);


//  $url = '/katalog';
//  $query = [];
//  $filters = $form_state['filters'];
  if ($filters['categories']['current_id']) {
    if ($cat_info = sec_catalog_get_category_info($filters['categories']['current_id'])) {
      $title = $cat_info['title'];
//      $url .= '/' . strtolower(transliteration_get($title));
      if ($cat_info['icon_num']) {
        $title_logo = '<div class="page-title-logo"><i class="icon icon-' . $cat_info['icon_num'] . '"></i></div>';
      }
      if ($cat_info['banner']['uri']) {
        $img_url = $cat_info['banner']['uri'];
      }
    }
  }
//  if ($filters['components']['current_id']) {
//    $query['component'] = $filters['components']['current_id'];
//  }
//  if ($filters['cultures']['current_id']) {
//    $query['culture'] = $filters['cultures']['current_id'];
//  }
//  if ($query) $url .= '?' . drupal_http_build_query($query);
  $setting['history']['url'] = $GLOBALS['base_url'] . $url;
  $commands[] = ajax_command_settings($setting);

  // изменить Заголовок страницы
  $commands[] = ajax_command_invoke('#page-title', 'html', [$title_logo . '<h1 class="title">' . $title . '</h1>']);

  // заменить баннер
  $commands[] = ajax_command_invoke('.page-banner .screen-width', 'attr', ['style', 'background-image: url(' . file_create_url($img_url) . ');']);

  return ['#type' => 'ajax', '#commands' => $commands];
